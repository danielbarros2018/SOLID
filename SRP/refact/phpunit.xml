<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  colors="true"
  executionOrder="random"
  failOnWarning="true"
  failOnRisky="true"
  failOnEmptyTestSuite="true"
  beStrictAboutOutputDuringTests="true"
>
  <testsuites>
    <testsuite name="Unit">
    <directory suffix=".php">./tests/unit</directory>
    </testsuite>
  </testsuites>

  <logging>
    <testdoxHtml outputFile="./tests/unit/results/test-report.html"/>
    <testdoxText outputFile="./tests/unit/results/test-report.txt"/>
  </logging>

</phpunit>
